<div class="card">
    <div class="card-header bg-dark text-white">
        <h3> <i class="far fa-clock"></i> {{language.libraryInfo.wishlist}}</h3>
        <p>{{language.libraryInfo.wishlistInfo}} </p>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each books}}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-image">
                        <a href="/{{languageFinder}}/library/{{uniqueId}}">
                            <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                        </a>
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p>{{description}}</p>
                        <p>{{price}}$</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>