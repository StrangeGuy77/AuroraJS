<style>
    body {
        background-image: url("https://hdqwalls.com/download/aurora-borealis-moon-night-ce-1920x1080.jpg");
    }
</style>

<div class="container">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-dark">
                <h3 class="card-title text-white">
                    <i class="far fa-envelope"></i> {{language.sectionsInfo.contactUs}}
                </h3>
            </div>
            <div class="card-body">
                <form action="/contact-us/send" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <i class="fas fa-tag sender-icon"></i>
                        <input type="text" name="subject" class="form-control"
                            placeholder="{{language.softwareInfo.signIssue}}" required>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-envelope sender-icon"></i>
                        <input type="text" name="sender" class="form-control"
                            placeholder="{{language.softwareInfo.signEmail}}" required>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-info-circle sender-icon"></i>
                        <textarea name="issue" class="form-control" rows="2"
                            placeholder="{{language.softwareInfo.signContent}}" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">
                            <i class="far fa-share-square"></i> {{language.softwareInfo.sendEmail}}
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-dark align-items-center">
                <h4 class="card-title text-white">
                    <i class="fas fa-question"></i> {{language.faq.faq}}
                </h4>
            </div>
            <div class="card-header align-items-center">
                <div class="card-header" id="toggle-howToUploadASoftware">
                    {{language.faq.howToUploadASoftware}} <i class="fas fa-sort-down"></i>
                </div>
                <div class="card-body" id="howToUploadASoftware">
                    <p class="lead">{{language.faq.htuSAnswer}}</p>
                </div>

                <div class="card-header" id="toggle-howToUploadABook">
                    {{language.faq.howToUploadABook}} <i class="fas fa-sort-down"></i>
                </div>
                <div class="card-body" id="howToUploadABook">
                    <p class="lead">{{language.faq.htuBAnswer}}</p>
                </div>

                <div class="card-header" id="toggle-howLongDoesItTakesForAnAnswer">
                    {{language.faq.howLongDoesItTakesForAnAnswer}} <i class="fas fa-sort-down"></i>
                </div>
                <div class="card-body" id="howLongDoesItTakesForAnAnswer">
                    <p class="lead">{{language.faq.hldtAnswer}}</p>
                </div>

                <div class="card-header" id="toggle-whereToFindCookiesAndUserAgreement">
                    {{language.faq.whereToFindCookiesAndUserAgreement}} <i class="fas fa-sort-down"></i>
                </div>
                <div class="card-body" id="whereToFindCookiesAndUserAgreement">
                    <p class="lead">{{language.faq.wtfcAnswer}}</p>
                    <button type="button" class="btn btn-primary" data-toggle="modal"
                        data-target=".bd-example-modal-lg">{{language.userAgreementPolicy.userAgreementModal}}</button>
                    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
                        aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">
                                        {{language.userAgreementPolicy.userAgreementTitle}}
                                    </h5>
                                </div>
                                <div class="modal-body">
                                    <p style="font-weight: 700">
                                        {{language.userAgreementPolicy.userAgreementPolicyTitle}}
                                    </p>
                                    <span>{{language.userAgreementPolicy.userAgreementPrivacyPolicyFP}}</span> <br>
                                    <br>
                                    <span>{{language.userAgreementPolicy.userAgreementPrivacyPolicySP}}</span> <br>
                                    <br>
                                    <p style="font-weight: 700">
                                        {{language.userAgreementPolicy.userAgreementReceivedDataTitle}}
                                    </p>
                                    <span>{{language.userAgreementPolicy.userAgreementReceivedData}}</span> <br>
                                    <br>

                                    <p style="font-weight: 700">
                                        {{language.userAgreementPolicy.userAgreementDataUseTitle}}
                                    </p>
                                    <span>{{language.userAgreementPolicy.userAgreementDataUseFP}}</span> <br>
                                    <br>
                                    <span>{{language.userAgreementPolicy.userAgreementDataUseSP}}</span> <br>
                                    <br>

                                    <p style="font-weight: 700">
                                        Cookies
                                    </p>
                                    <span>{{language.userAgreementPolicy.userAgreementCookiesFP}}</span> <br>
                                    <br>
                                    <span>{{language.userAgreementPolicy.userAgreementCookiesSP}}</span> <br>
                                    <br>
                                    <span>{{language.userAgreementPolicy.userAgreementCookiesTP}}</span> <br>
                                    <br>

                                    <p style="font-weight: 700">
                                        {{language.userAgreementPolicy.userAgreementThirdPartyLinksTitle}}
                                    </p>
                                    <span>{{language.userAgreementPolicy.userAgreementThirdPartyLinks}}</span> <br>
                                    <br>

                                    <p style="font-weight: 700">
                                        {{language.userAgreementPolicy.userAgreementPersonalInformationControlTitle}}
                                    </p>
                                    <span>{{language.userAgreementPolicy.userAgreementPersonalInformationControl}}</span>
                                    <br>
                                    <br>


                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-dismiss="modal">{{language.userAgreementPolicy.userAgreementDecline}}</button>
                                    <button type="button"
                                        class="btn btn-primary">{{language.userAgreementPolicy.userAgreementAccept}}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-header" id="toggle-whereToFindAModerator">
                    {{language.faq.whereToFindAModerator}} <i class="fas fa-sort-down"></i>
                </div>
                <div class="card-body" id="whereToFindAModerator">
                    <p class="lead">{{language.faq.htfmAnswer}}</p>
                </div>

            </div>
        </div>
    </div>
</div>