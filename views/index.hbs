<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-file-code"></i> Sube tu software
        </h3>
    </div>
    <div class="card-body">
        <form action="/software" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <i class="fas fa-file-code icon"></i>
                        <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                        <label for="inputGroupFile" class="custom-file-label">Escoge el archivo</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <i class="fas fa-tag icon"></i>
                <input type="text" name="title" class="form-control" placeholder="Título del software" required>
            </div>
            <div class="form-group">
                <i class="fas fa-info-circle icon"></i>
                <textarea name="description" class="form-control" rows="2" placeholder="Descripción del software" required></textarea>
            </div>
            <div class="form-group">
                <i class="fab fa-js icon"></i>
                <input type="text" name="language" class="form-control" placeholder="Lenguaje principal del software" required>
            </div>
            <div class="form-group">
                <i class="fas fa-dollar-sign icon"></i>
                <input type="text" name="price" class="form-control" placeholder="Precio del software (Si es gratis, déjelo en blanco)">
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i>  Subir
                </button>
            </div>
        </form>
        
    </div>
</div>