<li class="logic-sec">
    <button class="btn btn-dark" data-toggle="modal" data-target="#loginModal">
        <i class="fas fa-user-plus"></i> {{language.login}}
    </button>
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-md-2" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">{{language.login}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="{{language.userInfo.email}}"
                                aria-label="Username" aria-describedby="basic-addon1" id="loginModalEmail"
                                name="loginModalEmail" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="{{language.userInfo.password}}"
                                aria-label="Username" aria-describedby="basic-addon1" id="loginModalPassword"
                                name="loginModalPassword" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <p>
                                    <p id="login-alert-section" style="color: red"></p>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                            data-dismiss="modal">{{language.cancel}}</button>
                        <button class="btn btn-primary" id="login-button">{{language.login}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</li>